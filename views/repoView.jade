extend layout

block pageTitle

  .row
    .col-md-offset-1.col-md-10
      h1.page-header #{repo.full_name} 
        small #{repo.description}

      block pageContent
        .row
          .col-md-offset-3.col-md-6
            img(class='thumbnail img-responsive center-block', src='#{repo.owner.avatar_url}')
            dl.dl-horizontal
              dt Github owner url
              dd
                a(href='#{repo.owner.html_url}') #{repo.owner.html_url}
              dt API repos url
              dd
                a(href='#{repo.owner.repos_url}') #{repo.owner.repos_url}
              dt API events url
              dd
                a(href='#{repo.owner.events_url}') #{repo.owner.events_url}